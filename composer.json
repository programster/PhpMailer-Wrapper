{
    "name": "programster/phpmailer-wrapper",
    "type": "library",
    "description": "A wrapper around PHPMailer to make it easier to use.",
    "keywords": ["email", "phpmailer"],
    "homepage": "https://github.com/programster/package-emailers",
    "license": "MIT",
    "authors": [
        {
            "name": "Stuart Page",
            "email": "sdpagent@gmail.com",
            "homepage": "https://blog.programster.org",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">= 8.1.0",
        "ext-mbstring": "*",
        "phpmailer/phpmailer": "^6.6"
    },
    "autoload": {
        "psr-4": {
            "Programster\\Phpmailer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Programster\\Phpmailer\\Testing\\": "testing"
        }
    }
}
